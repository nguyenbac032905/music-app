extends ../../layouts/default.pug
block main
        h1 Danh sách ca sĩ
        .card.mb-3
            .card-header Danh sách ca sĩ
            .card-body
                .row 
                    .col-8
                    .col-4 
                        a.btn.btn-outline-success(href=`${prefixAdmin}/singers/create`) Thêm mới

                table(class="table table-hover table-sm")
                    thead
                        tr
                            th STT
                            th Hình ảnh
                            th Họ tên
                            th Trạng thái
                            th Hành động
                    tbody
                        each item,index in singers
                            tr
                                td #{index + 1}
                                td
                                    img(
                                    src=item.avatar
                                    alt=item.title
                                    width="100px"
                                    height="auto"
                                    )
                                td #{item.fullName}
                                td  
                                    if(item.status == "active")
                                        a(href="javascript:;" data-status=item.status data-id=item.id button-change-status class="badge badge-success") Hoạt động
                                    else 
                                        a(href="javascript:;" data-status=item.status data-id=item.id button-change-status class="badge badge-danger") Dừng hoạt động
                                td  
                                    a(href=`${prefixAdmin}/singers/edit/${item.id}` class="btn btn-warning btn-sm") Sửa
                                    a(href=`${prefixAdmin}/singers/detail/${item.id}` class="btn btn-secondary btn-sm") Chi tiết
                                    button(class="btn btn-danger btn-sm ml-1" button-delete data-id=item.id) Xóa