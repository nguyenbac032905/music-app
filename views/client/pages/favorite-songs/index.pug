extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Danh sách bài hát yêu thích")
        .row 
            each item in songs
                .col-6.mb-3 
                    div(class="song-item")
                        div(class="inner-image")
                            a(href=`/songs/detail/${item.slug}`)
                                img(src=item.thumbnail)
                        div(class="inner-content")
                            div(class="inner-title")
                                a(href=`/songs/detail/${item.slug}`) #{item.title}
                            div(class="inner-singer")
                                i.fa-solid.fa-microphone-lines
                                | #{item.infoSinger.fullName}
                            .inner-action.inner-like(data-id=song.id)
                                i.fa-regular.fa-thumbs-up
                                span  #{song.like? song.like : 0}
                            div(class="inner-action inner-heart active" data-id=item.id)
                                i.fa-regular.fa-heart
                                span Bài hát yêu thích
                            div(class="inner-time")
                                i.fa-regular.fa-clock
                                |  Hôm nay